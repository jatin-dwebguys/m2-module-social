<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Manage Social Accounts</title>
    </head>

    <update handle="customer_account"/>
    <referenceBlock name="page.main.title">
        <action method="setPageTitle">
            <argument translate="true" name="title" xsi:type="string">Manage Social Accounts</argument>
        </action>
    </referenceBlock>

    <referenceContainer name="content">
        <block class="LoganStellway\Social\Block\Customer" name="lssocial_manage_accounts" template="LoganStellway_Social::customer/accounts.phtml"/>
    </referenceContainer>
</page>
